<!-- create a new expense page -->
<div class=".container">
  <div class="row justify-content-center">
    <div class="col-auto">
      <div class="card mt-3">
        <div class="card-body">
          <h3 class="mb-1 text-center">請輸入你的支出</h3>
          <form action="/records/new" method="POST" id="create_form" novalidate>
            <div class="row mt-3">
              <div class="col-5 text-center">
                <label for="name" class="col-form-label">名稱</label>
              </div>
              <div class="col-7">
                <input type="text" id="name" class="form-control" name="name" placeholder="請填入名稱" required>
                <div class="invalid-feedback" style="font-size: 0.7em;">
                  必填資訊，請填入名稱
                </div>
              </div>
            </div>

            <div class="row mt-2">
              <div class="col-5 text-center">
                <label for="date" class="col-form-label">日期</label>
              </div>
              <div class="col-7">
                <input type="date" id="date" class="form-control" name="date" placeholder="請填入日期" required>
                <div class="invalid-feedback" style="font-size: 0.7em;">
                  必填資訊，請填入日期
                </div>
              </div>
            </div>

            <div class="row mt-2">
              <div class="col-5 text-center">
                <label for="category" class="col-form-label">類別</label>
              </div>
              <div class="col-7">
                <select id="category" class="form-select" name="category" required>
                  <option selected>請選擇類別</option>
                  <option value="家居物業">家居物業</option>
                  <option value="交通出行">交通出行</option>
                  <option value="餐飲食品">餐飲食品</option>
                  <option value="其他">其他</option>
                </select>
                <div class="invalid-feedback" style="font-size: 0.7em;">
                  必填資訊，請選擇類別
                </div>
              </div>
            </div>

            <div class="row mt-2">
              <div class="col-5 text-center">
                <label for="amount" class="col-form-label">金額</label>
              </div>
              <div class="col-7">
                <input type="number" step="1" min="0" id="amount" class="form-control" name="amount" placeholder="請填入金額"
                  required>
                <div class="invalid-feedback" style="font-size: 0.7em;">
                  必填資訊，請填入金額
                </div>
              </div>
            </div>

            <div class="row mx-auto mt-3">
              <button type="submit" class="btn btn-warning">新增支出</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
